)Attr
 $ type(output) caps(off)
 } type(output) hilite(reverse) color(turq) caps(off)
 _ type(input) caps(off) hilite(uscore) intens(low)
 + type(text ) intens(low) skip(on)
 @ type(input) caps(on ) hilite(uscore) intens(low)
)Body Expand(\\)
+Git Commit+\-\}zigtitle    +\-\----------
%Command ===>_zcmd       \ \ %Scroll ===>_ccsr+
+ \ \ %F3  +
%Commit Title:_msg1                                        +%Add+before:@z+(Y/N)
+Optional Tag:_tagid                                       +%Push+after:@z+(Y/N)
+
+Command:%Commit%Insert+or%Insert #+
+Line   :%I+insert%I#+insert #%D+delete%D#+delete
+
%S  %Commit Message Text
)Model
@z +_cmsg                                                                      +
)Init
  .zvars = '(zadd zpush zsel)'
  &ccsr = 'CSR'
  if (&MSG1 EQ &Z)
     .cursor = msg1
  if (&MSG1 NE &Z)
     if (&cmsg EQ &Z)
        .cursor = cmsg
  if (&zadd EQ &Z)
      &zadd = 'N'
  if (&zpush EQ &Z)
      &zpush = 'N'
  .help = zigih230
)Reinit
  REFRESH(tagid zpush)
)Proc
 if (&zcmd EQ &Z)
    if (&zsel EQ &Z)
      ver (&msg1,nb)
      ver (&zadd,list,Y,N,&Z)
      ver (&zpush,list,Y,N,&Z)
 &resp = .resp
  vput (zadd) profile
*REXX(* zedsmsg zedlmsg resp remote1 zpush)
  if resp = 'END' then exit
  zedsmsg = ''
  if words(tagid) > 1 then do
    zedsmsg = 'Error.'
    zedlmsg = 'The Tag may not have blanks.'
  end

  if zedsmsg = '' then
     if translate(substr(remote1,1,4)) = 'HTTP' then
        zpush = 'N'

*ENDREXX
 if (&zedsmsg NE &Z)
    .cursor = TAGID
    .msg = isrz001
)end
